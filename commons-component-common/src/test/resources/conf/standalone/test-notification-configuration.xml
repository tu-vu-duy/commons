      </value-param>
      <value-param>
        <name>dayOfMonthend</name>
        <value>28</value>
      </value-param>

      <value-param>
        <name>period</name><!-- repeat interval call make email notification -->
        <value>10m</value><!-- The value is number of m/h/d or +time milliseconds (ex: +180000)-->
